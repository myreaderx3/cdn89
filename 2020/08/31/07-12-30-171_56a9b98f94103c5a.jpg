        function loginAd(){
            var trigger = $('[data-id="share-button"]').offset().top;
            var triggerDistance = trigger-350;
            var triggerHide = $('[data-id="article-switch-trigger"]').offset().top-$(window).height()+250;
            
            if (winW <= 414) {
                $(window).on('scroll',function(){
                    var scrollTop = $(this).scrollTop();
                    if(scrollTop >= triggerDistance && scrollTop < triggerHide){
                        $('.loginAd').fadeIn(300);
                    }else {
                        $('.loginAd').fadeOut(300);
                    }
                    $('.loginAd__content').removeClass('isOpen')
                })
            }else {
